/* pages/movieDetail/movieDetail.wxss */
.head{
  width:750rpx;
  height:298rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  padding-left:40rpx;
}
.bg{
  position: absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  filter:blur(5px);
  z-index: -1;
}
.main-title{
  font-size:18px;
  color:#fff;
  font-weight:bold;
  margin-top:38rpx;
  margin-bottom:48rpx;
}
.des{
  font-size:13px;
  color:#fff;
  margin-bottom:70rpx;
}
.hot{
  display: flex;
  justify-content: flex-start;
  color:#666666;
}
.hot text{
  color:#f01a4c;
  margin-right:19rpx;
}
.hot text.comment{
  margin-left:40rpx;
}
.cover{
  position: absolute;
  width:204rpx;
  height:238rpx;
  right:30rpx;
  bottom:-78rpx;
}
.descrition{
  width:100%;
  padding-left:40rpx;
  border-top:1px solid #ccc;
  margin-top:90rpx;
  line-height:50rpx;
  font-size:12px;
  color:#666;
  text-indent: 2em;
}