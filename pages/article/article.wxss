.wrap{
  background: #f8f8f8;
}
.swiper image{
  width:100%;
  height:100%;
}
.article-list{
  display: flex;
  flex-direction: column;
 background: #fff;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
  margin-top:40rpx;
}
.article-top{
  padding-left:24rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height:80rpx;
  font-size:12px;
}
.article-top image{
  width:56rpx;
  height:56rpx;
  margin-right:42rpx;
}
.article-title{
  height: 80rpx;
  line-height: 80rpx;
  font-size:16px;
  font-weight:bold;
  padding-left:24rpx;
}
.article-img{
  width:750rpx;
}
.des{
  padding:0 24rpx;
  font-size:13px;
  color:#666;
  line-height: 54rpx;
}
.article-bottom{
  display: flex;
  height: 50rpx;
  align-items: center;
  justify-content: flex-start;
  padding-left:24rpx;
  color:#666;
  font-size:12px;
}
.comment{
  display: flex;
  align-items: center;
  margin-right:38rpx;
}
.comment image{
  width:34rpx;
  height:30rpx;
  margin-right:16rpx;
}
.count{
  display: flex;
  align-items: center;
}
.count image{
  width:34rpx;
  height:30rpx;
   margin-right:16rpx;
}