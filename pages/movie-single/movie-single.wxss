.main{
  display: flex;
  flex-direction: column;
  width:200rpx;
  align-items: center;
}
.mvimg{
  width:100%;
  height:270rpx;
}
.movie-title{
  width:100%;
  line-height:76rpx;
  font-size:12px;
  color:#666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.movie-bottom{
  width:100%;
  display: flex;
  justify-content: flex-start;
  font-size:12px;
  color:#666;
}
.movie-bottom>text{
  margin-right:20rpx;
}